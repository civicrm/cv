{
    "name": "civicrm/cv",
    "description": "CLI tool for CiviCRM",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim Otten",
            "email": "totten@civicrm.org"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "symfony/console": "^4",
        "symfony/process": "^4",
        "symfony/filesystem": "^4",
        "psy/psysh": "@stable",
        "civicrm/composer-downloads-plugin": "~2.1|^3"
    },
    "autoload": {
        "psr-4": {
            "Civi\\Cv\\": "src/"
         }
    },
    "bin": [
        "bin/cv"
    ],
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "bin-dir": "bin",
        "allow-plugins": {
            "civicrm/composer-downloads-plugin": true
        }
    },
    "extra": {
        "downloads": {
            "box": {
                "url": "https://github.com/humbug/box/releases/download/3.16.0/box.phar",
                "path": "bin/box",
                "type": "phar"
            }
        }
    }
}
